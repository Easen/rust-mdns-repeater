{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo launch",
            "env": {
                "RUST_LOG": "debug"
            },
            "cargo": {
                "args": [
                    "build",
                    "--manifest-path=Cargo.toml"
                ],
                "filter": {
                    "kind": "bin"
                }
            },
            "args": [
                "--interface",
                "eth0",
                "--interface",
                "eth0.20",
                "--additional-subnet",
                "192.168.10.0/24",
                "--ignore-question-subnet",
                "10.1.100.0/24"
            ]
        }
    ]
}